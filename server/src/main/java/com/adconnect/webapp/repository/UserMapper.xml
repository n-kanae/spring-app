<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.adconnect.webapp.repository.UserMapper">
    <!-- マッピング定義(users) -->
    <resultMap id="user" type="com.adconnect.webapp.entity.User">
        <id property="id" column="id" />
        <result property="name" column="role_name" />
        <result property="kana" column="role_name" />
        <result property="email" column="role_name" />
        <result property="image" column="role_name" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
        <assosiation propaty="roleUser" resultMap="roleUser">
            <result property="roleId" column="role_id" />
            <result property="userId" column="user_id" />
        </assosiation>
    </resultMap>
    <!-- ★要らないかも？マッピング定義(roles) -->
    <resultMap id="role" type="com.adconnect.webapp.entity.Role">
        <id property="id" column="id" />
        <result property="roleName" column="role_name" />
        <result property="createdAt" column="created_at" />
        <assosiation propaty="role" javaType="com.adconnect.webapp.entity.RoleUser">
            <result property="roleId" column="role_id" />
            <result property="roleName" column="role_name" />
        </assosiation>
    </resultMap>
    <!-- マッピング定義(role_user) -->
    <resultMap id="roleUser" type="com.adconnect.webapp.entity.RoleUser">
        <id property="id" column="id" />
        <result property="roleId" column="role_id" />
        <result property="userId" column="user_id" />
        <result property="createdAt" column="created_at" />
    </resultMap>
    <!-- 全件検索 -->
    <select id="selectAll" resultMap="user">
        SELECT u.id, u.name, u.kana, u.email, u.image, u.created_at as createdAt, u.updated_at as updatedAt, r.role_name as roleName
        FROM users u
        INNER JOIN role_users ru
            ON u.id = ru.user_id
        INNER JOIN roles r
            ON ru.role_id = r.id
    </select>
    <!-- １件検索 -->
    <select id="selectById" resultType="com.adconnect.webapp.entity.User">
        SELECT id, name, kana, email, image, created_at as createdAt,
        updated_at as updatedAt FROM users WHERE id = #{id}
    </select>
    <!-- 登録 -->
    <insert id="insert" parameterType="com.adconnect.webapp.entity.User">
	    INSERT INTO users (name, kana, email, password, image, created_at, updated_at, is_active)
	    VALUES
	    (#{name}, #{kana}, #{email}, #{password}, #{image}, CURRENT_TIMESTAMP, CURRENT_TIMESTAMP, true)
    </insert>
    <!-- 更新 -->
    <update id="update" parameterType="com.adconnect.webapp.entity.User">
	    UPDATE users SET name = #{name}, kana = #{kana}, email= #{email}, password = #{password}, image = #{image},
	    updated_at = CURRENT_TIMESTAMP WHERE id = #{id}
    </update>
    <!-- 削除 -->
    <delete id="delete">
        DELETE FROM users WHERE id = #{id}
    </delete>
</mapper>
